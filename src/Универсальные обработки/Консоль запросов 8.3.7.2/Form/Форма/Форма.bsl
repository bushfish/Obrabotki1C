Функция ПолучитьЗначениеНаСервере(Текст, Отмена)
	
	Значение = Неопределено;
	Попытка
		Выполнить("Значение = " + Текст + ";");
	Исключение
		Отмена = Истина;
		Возврат ИнформацияОбОшибке().Описание;
	КонецПопытки;
	
