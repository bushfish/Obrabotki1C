#Если Сервер Или ТолстыйКлиентОбычноеПриложение Или ВнешнееСоединение Тогда
	Если Метаданные.ОбщиеМодули.Найти(Имя) <> Неопределено Тогда
		Модуль = Вычислить(Имя);
	Иначе
		Модуль = Неопределено;
	КонецЕсли;
	
	Если ТипЗнч(Модуль) <> Тип("ОбщийМодуль") Тогда
		ВызватьИсключение НСтр("ru = 'Общий модуль """ + Имя + """ не найден.'");
	КонецЕсли;
#Иначе
	Модуль = Вычислить(Имя);
#Если НЕ ВебКлиент Тогда
	Если ТипЗнч(Модуль) <> Тип("ОбщийМодуль") Тогда
		ВызватьИсключение НСтр("ru = 'Общий модуль """ + Имя + """ не найден.'");
	КонецЕсли;
#КонецЕсли
#КонецЕсли
	
	Возврат Модуль;
	
КонецФункции

&НаСервере
Процедура СброситьПакетНаСервере()
	
	Об = РеквизитФормыВЗначение("Объект");
	Об.СброситьПакетНаСервере();
	
КонецПроцедуры

&НаКлиенте
Процедура СброситьПакет(Команда)
	СброситьПакетНаСервере();
КонецПроцедуры
