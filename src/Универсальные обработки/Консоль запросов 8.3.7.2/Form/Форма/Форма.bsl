	ЗакрывающаяСкоба = ВхождениеСтроки(КомментарийКТекстуЗапроса, "}");
	Если ЗакрывающаяСкоба = 0 Тогда
		Возврат;
	КонецЕсли;
	
	ДлинаСтроки = 0;
	
	ПозицияВопроса = ВхождениеСтроки(КомментарийКТекстуЗапроса, "<<?>>") + СтрДлина("<<?>>");
