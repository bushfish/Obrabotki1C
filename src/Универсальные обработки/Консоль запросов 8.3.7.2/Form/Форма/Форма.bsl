	КонСтроки = ?(ЗакомментироватьПоследнююСтроку, КонецСтроки, КонецСтроки - 1); 
    Для i = НачалоСтроки По КонСтроки Цикл
        Строка = ТекстовыйДокумент.ПолучитьСтроку(i);
		Если НЕ ЗначениеЗаполнено(Строка) Тогда
			Продолжить;
		КонецЕсли; 
		НепечатаемыхСимволовСлева = ВхождениеСтроки(Строка, СокрЛП(Строка));
		СтартСлешей = ?(СтартСлешей = Неопределено, НепечатаемыхСимволовСлева, Мин(СтартСлешей, НепечатаемыхСимволовСлева));
	КонецЦикла;
	СтартСлешей = ?(СтартСлешей = Неопределено, 1, СтартСлешей);
   
